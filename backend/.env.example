DATABASE_URL=postgresql+asyncpg://user:pass@localhost/companion_bot
REDIS_URL=redis://localhost:6379/0
SECRET_KEY=your-secret-key-here
LLM_API_KEY=your-openai-or-anthropic-key
ENVIRONMENT=development

# ========================================
# PROACTIVE FEATURES CONFIGURATION
# ========================================
# How often to check for proactive messages (in minutes)
PROACTIVE_CHECK_INTERVAL_MINUTES=5

# DND (Do Not Disturb) Auto-Detection:
# The bot automatically detects user's sleep/wake times from chat messages.
# Examples that trigger DND updates:
#   - "I usually sleep at 10 PM and wake up at 7 AM"
#   - "Don't message me after 11 PM"
#   - "I wake up at 6 AM"
#   - "I'm available from 9 AM to 10 PM"
# No configuration needed - works automatically via NLU!

# Time-based greeting hours (in user's timezone)
# Morning greeting sent between these hours
GREETING_MORNING_START_HOUR=6
GREETING_MORNING_END_HOUR=12

# Afternoon greeting sent between these hours
GREETING_AFTERNOON_START_HOUR=12
GREETING_AFTERNOON_END_HOUR=17

# Evening greeting sent between these hours
GREETING_EVENING_START_HOUR=17
GREETING_EVENING_END_HOUR=22

# Night greeting sent between these hours
GREETING_NIGHT_START_HOUR=22
GREETING_NIGHT_END_HOUR=6

# ========================================
# TELEGRAM BOT CONFIGURATION (Per Archetype)
# ========================================
# Each archetype has its own Telegram bot for better UX
# Users select an archetype â†’ get directed to the corresponding bot

TELEGRAM_BOT_GOLDEN_RETRIEVER=golden_retriever_bot
TELEGRAM_BOT_TSUNDERE=tsundere_bot
TELEGRAM_BOT_LAWYER=lawyer_bot
TELEGRAM_BOT_COOL_GIRL=cool_girl_bot
TELEGRAM_BOT_TOXIC_EX=toxic_ex_bot

# Single bot token (if using a shared webhook, update per bot as needed)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token